{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "jsx": "preserve",
    "module": "commonjs",
    "rootDir": "./",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "declaration": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "files": [
    "./index.js"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./gatsby-*"
  ]
}